<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp</h1>
                <p>View our hand-picked campgrounds from all over the world!</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
                </p>
            </div>
        </header>
        <a href="/">Home</a>
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(camp){%>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="thumbnail">
                        <img class="img-thumbnail" src="<%=camp.image%>">
                        <div class="caption">
                            <h4>
                                <%= camp.name %>
                            </h4>
                            <p>
                                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More info</a>
                            </p>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <% include ../partials/footer %>
